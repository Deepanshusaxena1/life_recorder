= form

-# date field
.form-group.row{class: "{{form.comment.errors|yesno:'is-invalid,is-valid'}}"}
  %label.col-md-3(for='id_date')= form.date.label
  %div.col-md-9
    = form.date|add_validated_result_class|add_class:"form-control datepicker"
    - for error in form.date.errors
      %p.invalid-feedback= error

-# comment field
.form-group.row{class: "{{form.comment.errors|yesno:'is-invalid,is-valid'}}"}
  %label.col-md-3(for='id_comment')= form.comment.label
  %div.col-md-9
    - render_field form.comment|add_class:"form-control"|add_validated_result_class placeholder="コメント"
    - for error in form.comment.errors
      %p.invalid-feedback= error

.form-group.row
  .offset-md-3.col-md-9
